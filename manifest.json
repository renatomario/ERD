{
   "manifest_version": 2,
   "name": "ERD",
   "version" : "1.0",

   "browser_action": {
      "default_icon": "icon.png",
	  "default_title": "Educational Resources Discoverer"
   },
   
   "background": {
     "scripts": ["background.js"],
     "persistent": false
    },
   
   "content_scripts": [
   {
   		"matches": ["http://*/*","https://*/*"],
		"js": ["thirdParty/jquery-2.2.0.min.js","content_script.js"],
		"css": ["mystyles.css" ],
		"run_at": "document_end" 
   }],
   
   "default_locale": "en_US",
   "icons": {
      "128": "icon.png"
   },


   "permissions": [ "tabs",
   					"<all_urls>",
					"http://*/"
				  ]
}
